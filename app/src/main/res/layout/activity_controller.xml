<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/keyboard_key_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/keyboard_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_menu_white"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:rippleColor="@color/light_grey" />

    <com.bowyer.app.fabtoolbar.FabToolbar
        android:id="@+id/keyboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:tb_anim_duration="400"
        app:tb_color="@color/color_accent"
        app:tb_container_gravity="center">

        <ImageButton
            android:id="@+id/controller_menu_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_arrow_back_white" />

        <ImageButton
            android:id="@+id/computer_remote_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_settings_remote_white" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/wifi" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_keyboard_voice_white" />

        <ImageButton
            android:id="@+id/enable_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_mode_edit_white" />

    </com.bowyer.app.fabtoolbar.FabToolbar>

    <com.bowyer.app.fabtoolbar.FabToolbar
        android:id="@+id/edit_keyboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:tb_anim_duration="400"
        app:tb_color="@color/color_accent"
        app:tb_container_gravity="center">

        <ImageButton
            android:id="@+id/cancel_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/ic_clear_white" />

        <ImageButton
            android:id="@+id/add_key_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/ic_add_white" />

        <ImageButton
            android:id="@+id/apply_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/ic_check_white" />
    </com.bowyer.app.fabtoolbar.FabToolbar>

</FrameLayout>