<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/events_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/events_button" />

        <ImageView
            android:id="@+id/my_locations_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/places_button" />

        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/settings_button" />

        <ImageView
            android:id="@+id/create_keyboard_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:src="@drawable/create_keyboard_button" />

        <ImageView
            android:id="@+id/download_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:src="@drawable/download_button" />
    </GridLayout>
</RelativeLayout>