<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/previous_button"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@color/color_accent"
        android:drawableLeft="@drawable/ic_arrow_previous"
        android:drawablePadding="-40dp"
        android:drawableStart="@drawable/ic_arrow_previous"
        android:paddingEnd="22dp"
        android:paddingLeft="22dp"
        android:paddingStart="22dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="1dp"
        android:background="@color/background_color"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@color/color_accent"
        android:drawableEnd="@drawable/ic_arrow_next"
        android:drawablePadding="-78dp"
        android:drawableRight="@drawable/ic_arrow_next"
        android:paddingEnd="22dp"
        android:paddingRight="22dp"
        android:paddingStart="22dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
</LinearLayout>